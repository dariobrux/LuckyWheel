<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <rubikstudio.library.LuckyWheelView
        android:id="@+id/luckyWheel"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lkwBackgroundColor="@color/white"
        app:lkwStrokeColor="@color/silver"
        app:lkwSubtitleColor="#5588e7"
        app:lkwFirstTitleColor="#5588e7"
        app:lkwFirstSubtitleColor="#5588e7"
        app:lkwSubtitleSize="14"
        app:lkwTitleColor="#8e9ca2"
        app:lkwTitleSize="14" />

</android.support.constraint.ConstraintLayout>